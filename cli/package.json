{
  "name": "snapfix",
  "version": "1.0.0",
  "description": "Autopilot for installation debugging. Stop screenshotting errors.",
  "type": "module",
  "bin": {
    "snapfix": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --target node20 --dts --clean",
    "dev": "tsx src/index.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "debug", "install", "cli", "ai", "error", "fix",
    "terminal", "npm", "pip", "brew", "developer-tools",
    "automation", "claude", "openai", "ollama"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "node-pty": "^1.0.0",
    "ora": "^8.1.0",
    "inquirer": "^9.3.0",
    "strip-ansi": "^7.1.0"
  },
  "devDependencies": {
    "tsup": "^8.2.0",
    "tsx": "^4.19.0",
    "typescript": "^5.5.0",
    "@types/node": "^22.0.0",
    "@types/inquirer": "^9.0.0"
  }
}
